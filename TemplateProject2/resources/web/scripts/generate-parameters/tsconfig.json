{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./scripts/generate-parameters/dist",
    "rootDir": "./scripts/generate-parameters",
    "declaration": false,
    "sourceMap": true
  },
  "include": ["scripts/generate-parameters/**/*"],
  "exclude": ["node_modules"]
}

